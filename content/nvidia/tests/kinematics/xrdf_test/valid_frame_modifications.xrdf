format: xrdf
format_version: 2.0

modifiers:
  - add_frame:
      frame_name: "tool_frame"
      parent_frame_name: "link1"
      joint_name: "tool_joint"
      joint_type: fixed
      fixed_transform:
        position: [0.1, 0.0, 0.0]
        orientation: {w: 1.0, xyz: [0.0, 0.0, 0.0]}

  - set_base_frame: "link0"

  - remove_mimic_attributes: 
      joint_name: "joint1"
      position_limits: [-3.14, 6.28]
      velocity_limits: 10.0 

default_joint_positions:
  joint0: 0.0
  joint1: 0.0

cspace:
  joint_names:
    - "joint0"
    - "joint1"
  acceleration_limits: [10.0, 30.0]
  jerk_limits: [100.0, 200.0]
