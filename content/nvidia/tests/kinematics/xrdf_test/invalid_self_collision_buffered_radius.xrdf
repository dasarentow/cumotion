format: xrdf
format_version: 2.0

default_joint_positions:
  joint1: 0.0
  joint2: 0.2
  joint3: -0.3

cspace:
  joint_names: 
    - "joint1"
    - "joint2"
    - "joint3"
  acceleration_limits: [8.0, 8.0, 8.0]
  jerk_limits: [80.0, 80.0, 80.0]

tool_frames: ["end_effector1", "end_effector2"]

self_collision:
  geometry: "detailed_robot"
  buffer_distance:
    link1: -0.03  # Makes effective radius negative (0.02 - 0.03 = -0.01)

geometry:
  base_spheres:
    spheres:
      link1:
        - center: [0.1, 0.0, 0.2]
          radius: 0.02  # Small base radius

  detailed_robot:
    clone: ["base_spheres"]
