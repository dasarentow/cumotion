format: xrdf
format_version: 2.0

default_joint_positions:
  joint1: 0.0
  joint2: 0.2
  joint3: -0.3

cspace:
  joint_names:
    - "joint1"
    - "joint2"
    - "joint3"
  acceleration_limits: [8.0, 8.0, 8.0]
  jerk_limits: [80.0, 80.0, 80.0]

tool_frames: ["end_effector1", "end_effector2"]

world_collision:
  geometry: "detailed_robot"
  buffer_distance:
    base: 0.003
    end_effector1: 0.005

self_collision:
  geometry: "basic_robot"
  buffer_distance:
    link1: 0.04
    end_effector1: 0.02
  ignore:
    link1: ["base"]    

geometry:
  # Base geometry groups with simple spheres
  base_spheres:
    spheres:
      base:
        - center: [0.0, 0.0, 0.0]
          radius: 0.2
        - center: [0.0, 0.0, 0.3]
          radius: 0.2

  arm_spheres:
    spheres:
      link1:
        - center: [0.1, 0.0, 0.2]
          radius: 0.05

  # Combined group using clone
  basic_robot:
    clone: ["base_spheres", "arm_spheres"]

  # Extended groups that combine cloned groups with new spheres
  detailed_robot:
    clone: ["basic_robot"]
    spheres:
      end_effector1:
        - center: [0.3, 0.0, 0.4]
          radius: 0.02
