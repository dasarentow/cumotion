format: xrdf
format_version: "2.0"

geometry:
  base_spheres:
    spheres:
      link1:
        - center: [0.0, 0.0, 0.0]
          radius: 0.1
  extra_spheres:
    spheres:
      link2:
        - center: [1.0, 1.0, 1.0]
          radius: 0.2
  combined_spheres:
    clone: ["base_spheres", "extra_spheres"]
    spheres:
      link3:
        - center: [0.5, 0.5, 0.5]
          radius: 0.15
