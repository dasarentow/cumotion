format: xrdf
format_version: 2.0

default_joint_positions:
  stand_to_linkA: 0.0
  linkA_to_linkB: 0.0

cspace:
  joint_names:
    - "stand_to_linkA"
    - "linkA_to_linkB"
  acceleration_limits: [10.0, 10.0]
  jerk_limits: [1000.0, 1000.0]

world_collision:
  geometry: "furuta_pendulum_collision_spheres"

geometry:
  furuta_pendulum_collision_spheres:
    spheres:
      linkA:
        - center: [ 0.0, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.111111, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.222222, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.333333, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.444444, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.555556, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.666667, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.777778, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.888889, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 1.0, 0.0, 0.0 ]
          radius: 0.1
      linkB:
        - center: [ 0.0, 0.0, 0.0 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.111111 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.222222 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.333333 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.444444 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.555556 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.666667 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.777778 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -0.888889 ]
          radius: 0.1
        - center: [ 0.0, 0.0, -1.0 ]
          radius: 0.1
