<robot name="furuta_pendulum">
    <link name="stand">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="green">
                <color rgba="0 0.8 .8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.001666666667" ixy="0.0" ixz="0.0" iyy="0.001666666667" iyz="0.0" izz="0.001666666667"/>
        </inertial>
    </link>

    <link name="linkA">
        <visual>
            <geometry>
                <box size="1 0.05 0.05"/>
            </geometry>
            <origin xyz="0.5 0 0"/>
            <material name="blue">
                <color rgba="0 0 .8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="1 0.05 0.05"/>
            </geometry>
            <origin xyz="0.5 0 0"/>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0.5 0 0"/>
            <inertia ixx="0.0004166666667" ixy="0.0" ixz="0.0" iyy="0.08354166667" iyz="0.0" izz="0.08354166667"/>
        </inertial>
    </link>

    <joint name="stand_to_linkA" type="continuous">
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0"/>
        <parent link="stand"/>
        <child link="linkA"/>
        <limit effort="100" lower="-100" upper="100" velocity="100"/>
    </joint>

    <link name="linkB">
        <visual>
            <geometry>
                <box size="0.05 0.05 1"/>
            </geometry>
            <origin xyz="0 0 -0.5"/>
            <material name="blue">
                <color rgba="0 0 .8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 1"/>
            </geometry>
            <origin xyz="0 0 -0.5"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 -0.5"/>
            <inertia ixx="0.08354166667" ixy="0.0" ixz="0.0" iyy="0.08354166667" iyz="0.0" izz="0.0004166666667"/>
        </inertial>
    </link>

    <joint name="linkA_to_linkB" type="continuous">
        <axis xyz="1 0 0"/>
        <origin xyz="1 0 0"/>
        <parent link="linkA"/>
        <child link="linkB"/>
        <limit effort="100" lower="-100" upper="100" velocity="100"/>
    </joint>

    <link name="tip">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="green">
                <color rgba="0 0.8 .8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.001666666667" ixy="0.0" ixz="0.0" iyy="0.001666666667" iyz="0.0" izz="0.001666666667"/>
        </inertial>
    </link>

    <joint name="linkB_to_tip" type="fixed">
        <origin xyz="0 0 -1"/>
        <parent link="linkB"/>
        <child link="tip"/>
    </joint>

</robot>
