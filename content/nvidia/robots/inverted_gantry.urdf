<robot name="inverted_gantry">
    <link name="base"/>
    <link name="link0"/>
    <link name="link1"/>
    <link name="link2">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </visual>
    </link>
    <joint name="x_slide" type="prismatic">
        <parent link="base"/>
        <child link="link0"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit effort="100" lower="-100.0" upper="100.0" velocity="100"/>
    </joint>
    <joint name="y_slide" type="prismatic">
        <parent link="link0"/>
        <child link="link1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 -1 0"/>
        <limit effort="100" lower="-100.0" upper="100.0" velocity="100"/>
    </joint>
    <joint name="z_slide" type="prismatic">
        <parent link="link1"/>
        <child link="link2"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 0 -1"/>
        <limit effort="100" lower="-100.0" upper="100.0" velocity="100"/>
    </joint>
</robot>
